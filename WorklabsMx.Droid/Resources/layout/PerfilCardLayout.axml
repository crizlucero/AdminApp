<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="8"
            android:columnCount="6">
            <ImageView
                android:src="@mipmap/ic_perfil_background"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:layout_column="0"
                android:layout_columnSpan="5"
                android:layout_gravity="top"
                android:adjustViewBounds="true"
                android:id="@+id/imgFondo" />
            <ImageButton
                android:src="@mipmap/ic_clear"
                android:id="@+id/ibCerrar"
                android:background="@android:color/transparent"
                android:tint="#ffffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_row="0"
                android:layout_column="0" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_margin="10dp"
                android:text="@string/Perfil"
                android:textColor="@android:color/white"
                android:textAllCaps="true"
                android:layout_row="0"
                android:layout_column="1" />
            <ImageView
                android:src="@mipmap/ic_create"
                android:id="@+id/btnEditar"
                android:layout_row="0"
                android:layout_column="4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:padding="5dp"
                android:tint="#FFF"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone" />
            <ImageView
                android:src="@mipmap/ic_profile_empty"
                android:id="@+id/ivPerfil"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_columnSpan="5"
                android:layout_marginTop="-75dp"
                android:background="@drawable/perfilimagenstyle"
                android:padding="5dp" />
            <Button
                android:id="@+id/btnSeguir"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnSpan="5"
                android:layout_gravity="center|bottom"
                android:text="@string/str_social_network_follow"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="#95D6FF"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:layout_marginBottom="-10dp" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/lblNombre"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnSpan="5"
                android:autoText="true"
                android:text="@string/str_profile_name"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_marginTop="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lblEmpresa"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_columnSpan="5"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="worklabs"
                android:textAllCaps="true"
                android:textSize="12dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="0"
                android:rowCount="6"
                android:layout_columnSpan="5"
                android:layout_gravity="center"
                android:id="@+id/btnSendMessage"
                android:text="@string/EnviarMensaje"
                android:backgroundTint="#95D6FF"
                android:textColor="#FFF"
                android:textSize="10dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp" />
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_columnSpan="5"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="#ff7f7f7f">
                <com.refractored.PagerSlidingTabStrip
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:pstsDividerWidth="1dp"
                    app:pstsTabPaddingLeftRight="20dp"
                    app:pstsTextColorSelected="#95D6FF"
                    app:pstsIndicatorColor="#95D6FF"
                    android:paddingBottom="10dp" />
                <android.support.v4.view.ViewPager
                    android:id="@+id/vpPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </GridLayout>
    </ScrollView>
</LinearLayout>