<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/labelTokenize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#3F51B5"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/app_suite_name"/>

        <EditText
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="numberDecimal|numberPassword"
            android:maxLength="16"
            android:hint="@string/token_credit_card"
            android:textColor="#3F51B5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="1" >

            <Button
                android:id="@+id/btnCancelToken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight=".5"
                android:background="#FFFFFF"
                android:textColor="#3F51B5"
                android:text="@string/cancel_process" />

            <Button
                android:id="@+id/btnAcceptToken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight=".5"
                android:background="#FFFFFF"
                android:textColor="#3F51B5"
                android:text="@string/token_process" />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
